@model int

@{
    ViewBag.title = "Not Found Page";
}

<div class="alert alert-danger mt-1 mb-1">
    <h4>404 Not Found Error :</h4>
    <hr />
    <h5>
        @ViewBag.ErrorMsg
    </h5>
</div>

<div class="alert alert-danger mt-1 mb-1">
    <h4>404 Original Path :</h4>
    <hr />
    <h5>
        @ViewBag.OriginalPath
    </h5>
</div>
<div class="alert alert-danger mt-1 mb-1">
    <h4>404 Original QueryString :</h4>
    <hr />
    <h5>
        @ViewBag.OriginalQueryString
    </h5>
</div>


<a asp-controller="home" asp-action="index" class="btn btn-outline-success"
   style="width:auto">Click here to see the list of all employees</a>


