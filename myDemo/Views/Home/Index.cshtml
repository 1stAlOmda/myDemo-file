@model IEnumerable<Employee>
@{
    ViewBag.Title = "Employee List";

    //var photoPath = "/img/NoImage.jpg";

}
<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "/img/" + (employee.PhotoName ?? "NoImage.jpg");

    <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
        <div class="card-header">
            <h3>@employee.Name</h3>
        </div>
        <img  />
        <img class="card-img-top imageThumbnail" src="@photoPath"  asp-append-version="true" />

        <div class="card-footer text-center">
            @*<a href="@Url.Action("Details","Home",new { id = employee.Id})" class="btn btn-primary m-1">View</a>
            @Html.ActionLink("display","Details","Home",new { id = employee.Id})*@
            <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary m-1">Show</a>
            <a asp-controller="Home" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
            <a asp-controller="Home" asp-action="Delete" asp-route-id="@employee.Id"class="btn btn-danger m-1">Delete</a>
        </div>
    </div>
    }
</div>


